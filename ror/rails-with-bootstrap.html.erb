<div class="row">
	<% @product.each do |product| %>
	<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
		<h2><%= product.name %></h2>
		<img src="<%= asset_path product.Image  %>" class="img-responsive" />
		<p><%= product.description %></p>
		<h4><%= product.price %></h4>
		<%= link_to 'Show', product, :class =>"btn btn-primary" %>
	</div>
	<% end %>
</div>
